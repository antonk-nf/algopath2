# LeetCode Analytics API Configuration Template
# Copy this file to .env and customize for your environment

# Environment (development, production, test)
ENVIRONMENT=development

# Debug Mode (true/false, auto-detected from LOG_LEVEL if not set)
DEBUG=true

# Data Configuration
DATA_ROOT_PATH=.
CACHE_DIR=.cache
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=1024

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_TITLE="LeetCode Analytics API"
API_VERSION="1.0.0"
API_DESCRIPTION="Analytics API for LeetCode interview data"

# Database Configuration (Optional)
DATABASE_URL=
DATABASE_ENABLED=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Processing Configuration
PARALLEL_WORKERS=4
CHUNK_SIZE=10000
MAX_MEMORY_MB=2048

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Security Configuration
CORS_ORIGINS=*
API_KEY=
RATE_LIMIT_PER_MINUTE=100

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30